<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio08.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Valor 1"/>
                <Editor Text="{Binding Valor1}" ></Editor>
                <Label Text="Valor 2"/>
                <Editor Text="{Binding Valor2}" ></Editor>
             
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="Sumar" Command="{Binding Sumar}"/>
                <Label Text="{Binding Suma}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Restar" Command="{Binding Restar}"/>
                <Label Text="{Binding Resta}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Multiplicar" Command="{Binding Multiplicar}"/>
                <Label Text="{Binding Multiplica}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Dividir" Command="{Binding Dividir}"/>
                <Label Text="{Binding Divide}"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
